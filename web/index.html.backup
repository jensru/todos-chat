                    await loadCategories();
                    await loadTasks();
                    addMessage('assistant', `‚úÖ Alle Tasks der Kategorie "${categoryName}" wurden gel√∂scht!`);
                } else {
                    addMessage('assistant', '‚ùå Fehler beim L√∂schen der Kategorie.');
                    }
                }
            } catch (error) {
                console.error('Error deleting category:', error);
                addMessage('assistant', '‚ùå Fehler beim L√∂schen der Kategorie.');
            }
        }


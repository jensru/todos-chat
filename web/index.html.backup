                    filteredTasks = getTomorrowTasks();
                    renderTasks();
                    break;
                case '√ºberf√§llig':
                    filteredTasks = getOverdueTasks();
                    renderTasks();
                    break;
                case 'completed':
                    filteredTasks = allTasks.filter(task => task.status === 'completed');
                    renderTasks();
